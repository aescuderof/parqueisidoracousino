// cart start

.cart

	.cart__heading

		.row

			.col-lg-4

				h6.cart__title Products

			.col-lg-2.text-center.d-none.d-lg-block

				h6.cart__title Price

			.col-lg-3.text-center.d-none.d-lg-block

				h6.cart__title Count

			.col-lg-2.text-center.d-none.d-lg-block

				h6.cart__title Summary

			.col-lg-1

	.cart__body

		.cart-item
			.row.align-items-center

				.col-lg-4

					.cart-item__product
						.cart-item__product-img
							img.img--contain(src="img/cart_1.jpg" alt="img")
						.cart-item__product-name
							a(href="shop-product.html") Mama Lama Cup

				.col-lg-2.text-center

					.cart-item__price 
						span 15.99
						span USD
				.col-lg-3.text-center

					.cart-item__count
						span.cart-item__minus
						input.cart-item__input(type="number" value="3")
						span.cart-item__plus

				.col-lg-2.text-center

					.cart-item__summa
						span 48
						span USD

				.col-lg-1.text-center.text-lg-right

					span.cart-item__remove
						+svg('remove')

		.cart-item
			.row.align-items-center

				.col-lg-4

					.cart-item__product
						.cart-item__product-img
							img.img--contain(src="img/cart_2.jpg" alt="img")
						.cart-item__product-name
							a(href="shop-product.html") Lion Water Bottle

				.col-lg-2.text-center

					.cart-item__price
						span 25.99
						span USD

				.col-lg-3.text-center

					.cart-item__count
						span.cart-item__minus
						input.cart-item__input(type="number" value="1")
						span.cart-item__plus

				.col-lg-2.text-center

					.cart-item__summa
						span 25.99
						span USD

				.col-lg-1.text-center.text-lg-right

					span.cart-item__remove
						+svg('remove')

		.cart-item
			.row.align-items-center

				.col-lg-4

					.cart-item__product
						.cart-item__product-img
							img.img--contain(src="img/cart_3.jpg" alt="img")
						.cart-item__product-name
							a(href="shop-product.html") Zoo T-Shirt

				.col-lg-2.text-center

					.cart-item__price
						span 35.99
						span USD

				.col-lg-3.text-center

					.cart-item__count
						span.cart-item__minus
						input.cart-item__input(type="number" value="2")
						span.cart-item__plus

				.col-lg-2.text-center

					.cart-item__summa
						span 72
						span USD

				.col-lg-1.text-center.text-lg-right

					span.cart-item__remove
						+svg('remove')

		.cart__lower

			.row

				.col-lg-8

					.coupon-block

						h6.cart__title Coupon Code

						form.form.coupon-form(action="javascript: void(0);")

							input.form__field(type="text" placeholder="xxx xxx xxx xxx")
							button.form__submit(type="submit") Apply Coupon

				.col-lg-4.text-lg-right

					.cart-totals

						h6.cart__title Cart Totals

						ul.cart-totals__list
							li
								span Subtotal:
								span 146 USD
							li
								span Sale:
								span 16 USD
							li
								span Total:
								span 130 USD

						a.cart-totals__link.button.button--primary(href="shop-checkout.html") Proceed to checkout

// cart end