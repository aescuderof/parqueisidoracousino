// section start

section.section.donation-details
	.container
		.row.bottom-70

			.col-12

				.donation-details__img
					img.img--bg(src="img/donation-details_img.jpg", alt="img")

				h3.donation-details__title #[strong Elephant] protection
				p Ghost pipefish yellow bass New Zealand sand diver eulachon brook lamprey driftfish, Atlantic trout. Mudfish: blue eye, arrowtooth eel french angelfish yellowfin pike unicorn fish.
				p Rudderfish long-finned pike--razorfish menhaden paradise fish, barramundi oceanic flyingfish. Fangtooth yellowtail banded killifish seamoth triplefin blenny desert pupfish crocodile shark catfish cutlassfish broadband dogfish whalefish.
				p Bengal danio blackfish; lumpsucker Atlantic silverside. Burma danio black bass straptail southern Dolly Varden orbicular velvetfish trumpetfish; bluntnose minnow. Hatchetfish pricklefish sixgill ray sawfish scaly dragonfish! Grayling Mexican golden trout

		form.form.donation-form

			.row.bottom-50

				.col-md-4.col-lg-3

					h6.donation-form__title Donation Amount #[span *]

				.col-md-8.col-lg-8

					.row.offset-30

						.col-6.col-sm-4.bottom-30

							label.form__radio-label
								span.form__label-text #[strong 5.00 $]
								input.form__input-radio(type="radio" name="option-select" value="5$")
								span.form__radio-mask

						.col-6.col-sm-4.bottom-30

							label.form__radio-label
								span.form__label-text #[strong 10.00 $]
								input.form__input-radio(type="radio" name="option-select" value="10$")
								span.form__radio-mask

						.col-6.col-sm-4.bottom-30

							label.form__radio-label
								span.form__label-text #[strong 20.00 $]
								input.form__input-radio(type="radio" name="option-select" value="20$" checked)
								span.form__radio-mask

						.col-6.col-sm-4.bottom-30

							label.form__radio-label
								span.form__label-text #[strong 100.00 $]
								input.form__input-radio(type="radio" name="option-select" value="100$")
								span.form__radio-mask

						.col-6.col-sm-4.bottom-30

							label.form__radio-label
								span.form__label-text #[strong 150.00 $]
								input.form__input-radio(type="radio" name="option-select" value="150$")
								span.form__radio-mask

						.col-6.col-sm-4.bottom-30

							label.form__radio-label
								span.form__label-text #[strong 200.00 $]
								input.form__input-radio(type="radio" name="option-select" value="200$")
								span.form__radio-mask

			.row.bottom-50

				.col-md-4.col-lg-3

					h6.donation-form__title Payment Method #[span *]

				.col-md-8.col-lg-8

					.row.offset-30

						.col-6.col-sm-4.bottom-30

							label.form__radio-label
								img.form__label-img(src="img/paypal.png" alt="paypal")
								input.form__input-radio(type="radio" name="method-select" value="paypal")
								span.form__radio-mask

						.col-6.col-sm-4.bottom-30

							label.form__radio-label
								img.form__label-img(src="img/klarna.png" alt="klarna")
								input.form__input-radio(type="radio" name="method-select" value="klarna")
								span.form__radio-mask

						.col-6.col-sm-4.bottom-30

							label.form__radio-label
								img.form__label-img(src="img/visa.png" alt="visa")
								input.form__input-radio(type="radio" name="method-select" value="visa" checked)
								span.form__radio-mask

			.row

				.col-md-4.col-lg-3

					h6.donation-form__title Campaigns

				.col-md-8.col-lg-8

					select.form__select(name="campaigns-select")
						option(value="value" selected) No specific campaign
						option(value="value2") Value 2
						option(value="value3") Value 3
						option(value="value3") Value 4
						option(value="value3") Value 5

			.row.bottom-30

				.col-md-4.col-lg-3

					h6.donation-form__title Message

				.col-md-8.col-lg-8.offset-30

					textarea.form__field.form__message(placeholder="Your massage text")

			.row.bottom-50

				.col-md-4.col-lg-3

					h6.donation-form__title Anonymous donation?

				.col-md-8.col-lg-8

					label.form__checkbox-label
						span.form__label-text Check this box to hide your personal info in our donators list
						input.form__input-checkbox(type="checkbox" name="donation-checkbox")
						span.form__checkbox-mask

			.row

				.col-12.text-center

					h3.donation-details__title.bottom-50.no-margin-top #[strong Donator] Details

				.col-md-4

					input.form__field(type="text" name="first-name" placeholder="First Name")

				.col-md-4

					input.form__field(type="text" name="last-name" placeholder="Last Name")

				.col-md-4

					input.form__field(type="email" name="email" placeholder="Email")

				.col-md-8

					input.form__field(type="text" name="adress" placeholder="Adress")

				.col-md-4

					input.form__field(type="text" name="zip" placeholder="Zip Code")

				.col-12.text-center

					button.form__submit(type="submit") Submit donation

// section end