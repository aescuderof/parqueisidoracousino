block main

	// promo start

	section.promo-primary

		picture
			source(srcset='img/education.jpg' media='(min-width: 992px)')
			img.img--bg(src='img/education.jpg' alt='img')

		.container
			.row
				.col-auto
					.align-container
						.align-container__item
							span.promo-primary__pre-title Wild World
							h1.promo-primary__title #[span EARLY] #[span CHILDHOOD]

	// promo end

	// cta start

	.cta-block

		.container
			.row.align-items-center
