extends ../layouts/primary.pug

block variables

	-var page = 'gallery'

	-var dest = 'pages'

block header

	include ../blocks/_menu-dropdown/_menu-dropdown

	include ../blocks/_header/_header

block main

	// promo start

	section.promo-primary

		picture
			source(srcset='img/gallery.jpg' media='(min-width: 992px)')
			img.img--bg(src='img/gallery.jpg' alt='img')

		.container
			.row
				.col-auto
					.align-container
						.align-container__item
							span.promo-primary__pre-title Wild World
							h1.promo-primary__title #[span Gallery of our] #[span Zoo]

	// promo end

	// gallery start

	section.section.gallery
		.container
			.row.bottom-50.align-items-end

				.col-12

					// filter panel start

					ul.filter-panel
						li.filter-panel__item.filter-panel__item--active(data-filter="*")
							span All
						li.filter-panel__item(data-filter=".category_2")
							span Bulls
						li.filter-panel__item(data-filter=".category_3")
							span Girafes
						li.filter-panel__item(data-filter=".category_4")
							span Mammals
						li.filter-panel__item(data-filter=".category_5")
							span Birds
						li.filter-panel__item(data-filter=".category_6")
							span Fishes

					// filter panel end

		.row.no-gutters.gallery-masonry

			.category_1.col-sm-6.col-md-3.gallery-masonry__item

				a.gallery-masonry__img.gallery-masonry__item--height-1(href="img/gallery_1.jpg" data-fancybox="gallery")
					img.img--bg(src="img/gallery_1.jpg", alt="img")
					.gallery-masonry__description
						span Mamals
						span Giraffes

			.category_1.col-sm-6.col-md-6.gallery-masonry__item

				a.gallery-masonry__img.gallery-masonry__item--height-2(href="img/gallery_2.jpg" data-fancybox="gallery")
					img.img--bg(src="img/gallery_2.jpg", alt="img")
					.gallery-masonry__description
						span Mamals
						span Lions

			.category_2.col-sm-6.col-md-3.gallery-masonry__item

				a.gallery-masonry__img.gallery-masonry__item--height-3(href="img/gallery_3.jpg" data-fancybox="gallery")
