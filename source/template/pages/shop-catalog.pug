extends ../layouts/primary.pug

block variables

	-var page = 'catalog'

	-var dest = 'shop'

block header

	include ../blocks/_menu-dropdown/_menu-dropdown

	include ../blocks/_shop-header/_shop-header

block main

	// promo start

	section.promo-primary

		picture
			source(srcset='img/elements.jpg' media='(min-width: 992px)')
			img.img--bg(src='img/elements.jpg' alt='img')

		.container
			.row
				.col-auto
					.align-container
						.align-container__item
							span.promo-primary__pre-title Wild World
							h1.promo-primary__title #[span Shop] #[span Catalog]

	// promo end

	include ../blocks/_shop/_shop

block footer

	include ../blocks/_shop-footer/_shop-footer

	.shop__backdrop