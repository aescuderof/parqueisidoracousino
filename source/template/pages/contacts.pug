extends ../layouts/primary.pug

block variables

	-var page = 'contacts'

block header

	include ../blocks/_menu-dropdown/_menu-dropdown

	include ../blocks/_header/_header

block main

	// promo start

	section.promo-primary

		picture
			source(srcset='img/contacts.jpg' media='(min-width: 992px)')
			img.img--bg(src='img/contacts.jpg' alt='img')

		.container
			.row
				.col-auto
					.align-container
						.align-container__item
							span.promo-primary__pre-title Wild World
							h1.promo-primary__title #[span Our] #[span Contacts]

	// promo end

	// section start

	section.section
		.container
			.row.bottom-50

				.col-12

					.heading.heading--primary.heading--center
						h2.heading__title.no-margin-bottom #[span Get in touch] #[span with us]

			.row
				.col-lg-10.offset-lg-1.col-xl-8.offset-xl-2

					form#ajax-form.form(action="javascript:void(0);" method="post")

						.row

							.col-md-6

								input.form__field(type="text" name="name" placeholder="Your Name")

							.col-md-6

								input.form__field(type="email" name="email" placeholder="Your Email")

							.col-md-6

								input.form__field(type="tel" name="phone" placeholder="Your Phone")

							.col-md-6

								input.form__field(type="text" name="subject" placeholder="Subject")

							.col-12

								textarea.form__field.form__message(name="message" placeholder="Text")

							.col-12.text-center

								input.form__submit(type="submit" value="Send")

							.col-12

								.alert.alert--success.alert--filled
									.alert__icon
										+svg('check')
									p.alert__text #[strong Well done!] Your form has been sent
									span.alert__close
										+svg('close')

								.alert.alert--error.alert--filled
									.alert__icon
										+svg('close')
									p.alert__text #[strong Oh snap!] Your form has not been sent
									span.alert__close
										+svg('close')

	// section end

	// section start

	section.map-section

		.container
			.row
				.col-md-6.col-lg-5.col-xl-4

					.contacts-banner
						p #[+svg('map-pin')] av. Washington 165, NY CA 54003
						p #[+svg('phone-call')] #[a(href="tel:+31859644725") +31 85 964 47 25] #[a(href="tel:31859644725") +31 65 792 63 11]
						p #[+svg('mail')] #[a(href="mailto:info@animalsworld.com") info@animalsworld.com]
						p #[+svg('clock')] 9:00 AM - 5:00 PM

		#map(data-api-key="AIzaSyD5ES8GFHrarPhIVpDhFDea6fPtga0Wy4Y" data-longitude="-73.935242" data-latitude="40.730610" data-marker="img/placeholder.png")

	// section end

block footer

	include ../blocks/_footer/_footer