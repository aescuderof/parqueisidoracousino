extends ../layouts/primary.pug

block variables

	-var page = 'animal-details'

	-var dest = 'pages'

block header

	include ../blocks/_menu-dropdown/_menu-dropdown

	include ../blocks/_header/_header

block main

	// promo start

	section.promo-primary

		picture
			source(srcset='img/animal-details.jpg' media='(min-width: 992px)')
			img.img--bg(src='img/animal-details.jpg' alt='img')

		.container
			.row
				.col-auto
					.align-container
						.align-container__item
							span.promo-primary__pre-title Wild World
							h1.promo-primary__title #[span Amur] #[span Tiger]

	// promo end

	// section start

	section.section.animal-details
		.container
			.row

				.col-lg-8.offset-lg-2.col-xl-6.offset-xl-3

					.row.offset-30

						.col-12.col-sm-6.col-md-4.bottom-30

							.animal-details__icon
								+svg('cat')

						.col-12.col-sm-6.col-md-4.bottom-30

							h6.animal-details__title Conservation status
							p Endangered

						.col-12.col-sm-6.col-md-4.bottom-30

							h6.animal-details__title Life span
							p 16-25 years

						.col-12.col-sm-6.col-md-4.bottom-30

							h6.animal-details__title Body size
							p 370-600 lbs. #[br] 6.5-11 ft.

						.col-12.col-sm-6.col-md-4.bottom-30

							h6.animal-details__title Native habitat
							p Forests and bush-covered mountains of Eastern Russia, northeastern China, North Korea

						.col-12.col-sm-6.col-md-4.bottom-30

							h6.animal-details__title Diet
							p Deer, wild pig, fish, grass, nuts, berries

	// section end

	// section start

	section.section
		img.d-block.section__bg.height100.width100.t0(src="img/section-bg.png", alt="img")
		.container
			.row

				.col-lg-8.offset-lg-2.col-xl-6.offset-xl-3

					h6.bottom-15 The Amur tiger is the largest of the tiger subspecies.
					p The coat of the Amur tiger is the palest orange of all the tigers and has the fewest stripes. Each tigerâ€™s stripes are unique and act as identifiers for other tigers. It has a scruff of fur around its neck that is more developed than other tigers, which helps protect it from the cold environment in which it lives. They generally live alone, but they do keep in contact with other tigers through scent marking. Another way they communicate is through scrapes on the ground, claw marks, and vocalizations.
					.text-center.top-30
						a.button.button--primary(href="#") Find on the map

	// section end

	// section start

	section.section.no-padding-top.no-padding-bottom
		.row.no-gutters

			.col-lg-6

				a.action-block(href="#")
					.action-block__inner
						img.img--bg(src="img/action-block_8.jpg" alt="img")
						h3.action-block__title #[span Arabic]#[br] #[span Horse]

			.col-lg-6

				a.action-block(href="#")
					.action-block__inner
						img.img--bg(src="img/action-block_9.jpg" alt="img")
						h3.action-block__title #[span African]#[br] #[span Eliphant]

	// section end

block footer

	include ../blocks/_footer/_footer