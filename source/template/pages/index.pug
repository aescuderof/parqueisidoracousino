extends ../layouts/primary.pug

block variables

	-var page = 'index'

	-var type = 'front'

block header

	include ../blocks/_menu-dropdown/_menu-dropdown

	include ../blocks/_header/_header

block main

	include ../blocks/_promo/_promo

	// section start

	section#about.section.about-front.no-padding-bottom
		img.about-front__bg.t50.r0(src="img/about_bg.png" alt="img")
		.container
			.row.flex-column-reverse.flex-lg-row

				.col-lg-6.col-xl-5

					.info-box
						.info-box__inner
							img.img--bg(src="img/about-us.jpg" alt="img")
							.heading.heading--primary
								span.heading__pre-title Donation
								h2.heading__title.color--white #[span Help us more]#[br] #[span protect animals] 
							p Rudderfish long-finned pike--razorfish menhaden paradise fish, barramundi oceanic flyingfish.
							a.info-box__link(href="volunteer.html") Donate!

				.col-lg-6.col-xl-6.offset-xl-1

					.heading.heading--primary.heading--style-2
						span.heading__pre-title About ZOO
						h2.heading__title #[span Words about]#[br] #[span Animal World Zoo]

					p #[strong Ghost pipefish yellow bass New Zealand sand diver eulachon brook lamprey driftfish, Atlantic trout. Mudfish: blue eye, arrowtooth eel french angelfish yellowfin pike unicorn fish.]
