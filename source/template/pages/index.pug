					.row.offset-30

						.col-6.col-sm-3

							.brand-item.bottom-30
								img.brand-item__img(src="img/logo_1.png" alt="logo")

						.col-6.col-sm-3

							.brand-item.bottom-30
								img.brand-item__img(src="img/logo_2.png" alt="logo")

						.col-6.col-sm-3

							.brand-item.bottom-30
								img.brand-item__img(src="img/logo_3.png" alt="logo")

						.col-6.col-sm-3

							.brand-item.bottom-30
								img.brand-item__img(src="img/logo_4.png" alt="logo")

					a.button.button--primary.top-50(href="#") More about

	// section end

	// section start

	section.section.no-padding-bottom

		.container
			.row.align-items-end.bottom-70

				.col-xl-7

					.heading.heading--primary.heading--style-2
						span.heading__pre-title Our animals
						h2.heading__title #[span Awesome AnimalS in] #[span our Zoo]
						p Rudderfish long-finned pike--razorfish menhaden paradise fish, barramundi oceanic flyingfish. Fangtooth yellowtail banded killifish seamoth triplefin blenny desert pupfish crocodile shark catfish cutlassfish broadband dogfish whalefish.                 

				.col-xl-5.d-none.d-xl-block

					.row

						.col-md-4

							.counter-item.counter-item--front-1
								.counter-item__top
									h6.counter-item__title Reptiles
								.counter-item__lower
									span.js-counter 850

						.col-md-4

							.counter-item.counter-item--front-1
								.counter-item__top
									h6.counter-item__title Species
								.counter-item__lower
									span.js-counter 230

						.col-md-4

							.counter-item.counter-item--front-1
								.counter-item__top
									h6.counter-item__title Visitors
								.counter-item__lower
									span.js-counter 160.000

			.row.offset-30

				.col-sm-6.col-md-4.col-xl-2

					a.animal-item.text-center.background--orange.color--primary(href="#")
						.animal-item__icon.color--primary
							+svg('spider')
						h6.animal-item__title Invertebrates

				.col-sm-6.col-md-4.col-xl-2

					a.animal-item.text-center.background--gray.color--primary(href="#")
						.animal-item__icon
							+svg('bull')
						h6.animal-item__title Bulls

				.col-sm-6.col-md-4.col-xl-2

					a.animal-item.text-center.background--dark.color--white(href="#")
						.animal-item__icon
							+svg('giraffe')
						h6.animal-item__title Girafes

				.col-sm-6.col-md-4.col-xl-2

					a.animal-item.text-center.background--orange.color--primary(href="#")
						.animal-item__icon
							+svg('elep')
						h6.animal-item__title Mammals

				.col-sm-6.col-md-4.col-xl-2

					a.animal-item.text-center.background--gray.color--primary(href="#")
						.animal-item__icon
							+svg('bird')
						h6.animal-item__title Birds

				.col-sm-6.col-md-4.col-xl-2

					a.animal-item.text-center.background--dark.color--white(href="#")
						.animal-item__icon
							+svg('fish')
						h6.animal-item__title Fishes

	// section end

