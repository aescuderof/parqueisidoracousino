extends ../layouts/primary.pug

block variables

	-var page = 'paginations'

	-var dest = 'elements'

block header

	include ../blocks/_menu-dropdown/_menu-dropdown

	include ../blocks/_header/_header

block main

	// promo start

	section.promo-primary

		picture
			source(srcset='img/elements.jpg' media='(min-width: 992px)')
			img.img--bg(src='img/elements.jpg' alt='img')

		.container
			.row
				.col-auto
					.align-container
						.align-container__item
							span.promo-primary__pre-title Wild World
							h1.promo-primary__title #[span Element] #[span Paginations]

	// promo end

	// section start

	section.section.elements

		.container
			.row
				.col-xl-10
					h4.elements__title Variant 1

			.row
				.col-12

					ul.pagination
						li.pagination__item.pagination__item--prev
							+fa('angle-left')
							span Back
						li.pagination__item
							span 1
						li.pagination__item.pagination__item--active
							span 2
						li.pagination__item
							span 3
						li.pagination__item
							span 4
						li.pagination__item
							span 5
						li.pagination__item.pagination__item--next
							span Next
							+fa('angle-right')

	// section end

	// section start

	section.section.elements.no-padding-top

		.container
			.row
				.col-xl-10
					h4.elements__title Variant 2

			.row
				.col-12

					ul.pagination.pagination--with-bg
						li.pagination__item.pagination__item--prev
							+fa('angle-left')
							span Back
						li.pagination__item
							span 1
						li.pagination__item.pagination__item--active
							span 2
						li.pagination__item
							span 3
						li.pagination__item
							span 4
						li.pagination__item
							span 5
						li.pagination__item.pagination__item--next
							span Next
							+fa('angle-right')

	// section end

	// section start

	section.section.elements.no-padding-top

		.container
			.row
				.col-xl-10
					h4.elements__title Variant 3

			.row
				.col-12

					ul.pagination.pagination--rounded
						li.pagination__item.pagination__item--prev
							+fa('angle-left')
						li.pagination__item
							span 1
						li.pagination__item.pagination__item--active
							span 2
						li.pagination__item
							span 3
						li.pagination__item
							span 4
						li.pagination__item
							span 5
						li.pagination__item.pagination__item--next
							+fa('angle-right')

	// section end

	// section start

	section.section.elements.no-padding-top

		.container
			.row
				.col-xl-10
					h4.elements__title Variant 4

			.row
				.col-12

					ul.pagination.pagination--with-bg.pagination--rounded
						li.pagination__item.pagination__item--prev
							+fa('angle-left')
						li.pagination__item
							span 1
						li.pagination__item.pagination__item--active
							span 2
						li.pagination__item
							span 3
						li.pagination__item
							span 4
						li.pagination__item
							span 5
						li.pagination__item.pagination__item--next
							+fa('angle-right')

	// section end

block footer

	include ../blocks/_footer/_footer